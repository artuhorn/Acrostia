        // SECTION [ CONTACTS ]
        div.section.section--contacts
            div.l-center
                // Header
                +Header({activePage: 'Contacts'})

                // Standard section's blocks
                div.section__title Contact us
                div.section__description.section__description--contacts Cras suscipit porttitor porttitor. Morbi sit amet tincidunt sapien. Curabitur posuere lectus aliquet erat rutrum sollicitudin. In enim diam, ullamcorper quis libero et, ultricies commodo est. Quisque at ante vitae justo fermentum viverra ac eu justo. Ut luctus imperdiet lacus, eget laoreet erat posuere quis.

                // Flex container for contacts and form
                div.l-contacts
                    // Contacts section
                    div.contacts
                        h2.contacts__title Address
                        // Split address section and map for two columns
                        div.l-flex-row
                            div.l-flex-2column
                                div.l-flex-column
                                    h3.contacts__firm-name Acrostia
                                    p.contacts__address Sevenoaks Rd
                                    p.contacts__address Sevenoaks TN14 7HR, UK
                                    p.l-dummy

                                    div.contacts__l-contacts-group
                                        table.contacts-group
                                            tr
                                                td.contacts-group__contact-type Phone:
                                                td.contacts-group__contact-value +44 555 555 555
                                            tr
                                                td.contacts-group__contact-type Fax:
                                                td.contacts-group__contact-value +44 556  555 555
                                            tr
                                                td.contacts-group__contact-type E-mail:
                                                td.contacts-group__contact-value <span class="text--email">info@acrostia.com</span>
                                            tr
                                                td.contacts-group__contact-type Skype:
                                                td.contacts-group__contact-value Ac0stia

                            div.l-flex-2column
                                img.contacts__map(src="images/contacts__map.png" alt="" width="260" height="220")

                    // Feedback form section
                    div.feedback
                        h2.feedback__title Ask a question
                        div.feedback__form
                            form(action="")
                                input.feedback__input(name="name" type="text" placeholder="Name")
                                input.feedback__input(name="email" type="text" placeholder="E-mail")
                                textarea.feedback__text(name="question" placeholder="Your question")
                                input.feedback__submit(type="submit" value="Send")

        //---------------------------------------------------------------------
        // SECTION [ FOOTER ]
        div.footer
            div.footer__socials.socials--big
                +Socials

        script(src="//code.jquery.com/jquery-2.1.4.min.js" defer)
