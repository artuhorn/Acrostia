include jade/includes/Mixins
include js/adaptive-slider/jade/AdaptiveSlider

doctype html
html
    head
        title Acrostia
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width initial-scale=1.0")
        link(rel="stylesheet" href="styles.css")
        link(rel="stylesheet" href="http://fonts.googleapis.com/css?family=Lato:400,300,900,700" type="text/css")
    body

        //---------------------------------------------------------------------
        // SECTION [ HOME ]
        div.slider.section
            div.l-center
                // Header
                +Header({activePage: 'Home', withoutDivider: true})

            //- Slider block
            //-TODO: Во время загрузки страницы видны все content-блоки. Необходимо это исправить
            div#main-slider.slider-layout
                div.adaptive-slider(data-toggles="true" data-controls="false" data-autoswitch="false" class="adaptive-slider--active")
                    div.adaptive-slider__container
                        //- Slides list
                        ul.adaptive-slider__list
                            //- Slide 1
                            li#ms1.adaptive-slider__item(class="adaptive-slider__item--active")
                                img.adaptive-slider__image(src="images/slider-page1.jpg" alt="Slider image" width="100%")


                                // First inner slider
                                div.inner-slider.slider-layout
                                    div.adaptive-slider(data-toggles="false" data-controls="true" data-autoswitch="false" class="adaptive-slider--active")
                                        div.adaptive-slider__container
                                            ul.adaptive-slider__list
                                                // Slide 1
                                                li#is1s1.adaptive-slider__item(class="adaptive-slider__item--active")
                                                    div.adaptive-slider__content
                                                        p.adaptive-slider__content-left!= "<span class='text--uppercase'>Good ideas</span> comes"
                                                        p.adaptive-slider__content-right= "First!"

                                                // Slide 2
                                                li#is1s2.adaptive-slider__item
                                                    div.adaptive-slider__content
                                                        p.adaptive-slider__content-left!= "<span class='text--uppercase'>Bad ideas</span> comes"
                                                        p.adaptive-slider__content-right= "Last!"

                                                // Slide 3
                                                li#is1s3.adaptive-slider__item
                                                    div.adaptive-slider__content
                                                        p.adaptive-slider__content-left!= "<span class='text--uppercase'>Bad ideas</span> comes"
                                                        p.adaptive-slider__content-right= "Last!"

                                        div.adaptive-slider__controls

                                //- end of first inner slider

                            //- end of slide 1 in main slider

                            //- Slide 2
                            li#ms2.adaptive-slider__item(class="")
                                img.adaptive-slider__image(src="images/slider-page1.jpg" alt="Slider image" width="100%")

                                // Second inner slider
                                div.inner-slider.slider-layout
                                    div.adaptive-slider(data-toggles="false" data-controls="true" data-autoswitch="false" class="adaptive-slider--active")
                                        div.adaptive-slider__container
                                            ul.adaptive-slider__list
                                                // Slide 1
                                                li#is2s1.adaptive-slider__item(class="adaptive-slider__item--active")
                                                    div.adaptive-slider__content
                                                        p.adaptive-slider__content-left!= "<span class='text--uppercase'>Inner</span> slide 1"
                                                        p.adaptive-slider__content-right= "SL2"

                                                // Slide 2
                                                li#is2s2.adaptive-slider__item
                                                    div.adaptive-slider__content
                                                        p.adaptive-slider__content-left!= "<span class='text--uppercase'>Inner</span> slide 2"
                                                        p.adaptive-slider__content-right= "SL2"

                                                // Slide 3
                                                li#is2s3.adaptive-slider__item
                                                    div.adaptive-slider__content
                                                        p.adaptive-slider__content-left!= "<span class='text--uppercase'>Inner</span> slide 3"
                                                        p.adaptive-slider__content-right= "SL2"

                                                // Slide 4
                                                li#is2s4.adaptive-slider__item
                                                    div.adaptive-slider__content
                                                        p.adaptive-slider__content-left!= "<span class='text--uppercase'>Inner</span> slide 4"
                                                        p.adaptive-slider__content-right= "SL2"

                                        div.adaptive-slider__controls
                                //- end of second inner slider

                            //- end of slide 2 in main slider

                        //- Toggles. Create dynamically with JS
                        ul.adaptive-slider__toggles

                    //- Arrows. Create dynamically with JS
                    div.adaptive-slider__controls

